{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "resolveJsonModule": true,
      "jsx": "react",
      "lib": [
        "es6",
        "es2015",  
        "es2017",
        "dom"
      ],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "es6"
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js"    
    ]
}